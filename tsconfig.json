{
  "extends": "@backstage/cli/config/tsconfig.json",
  "include": [
    "packages/*/src",
    "plugins/*/src",
    "plugins/*/dev",
    "plugins/*/migrations",
    "plugins/*/dist" 
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "./dist-types",
    "rootDir": "./",
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationMap": true,
    "skipLibCheck": true
  }
}
